{
  "extends": ["@commitlint/config-conventional"],
  "rules": {

    "type-enum": [
      2,
      "always",
      [
        "clean",
        "ci",
        "chore",
        "docs",
        "ticket",
        "feat",
        "fix",
        "perf",
        "refactor",
        "revert",
        "style"
      ]
    ]
  }
}

